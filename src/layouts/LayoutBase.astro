---
import TopBar from "../components/TopBar.astro";
import NavBar from "../components/NavBar.astro";
import "@fontsource/poppins";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en-us">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="w-100 flex flex-col h-screen justify-between">
      <div class="p-7">
        <TopBar />
        <NavBar />
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>

<script>
  import { getCurrentThemeMode } from "../scripts/theme";

  const currentTheme = getCurrentThemeMode();
  if (currentTheme === "dark") {
    document.documentElement.classList.add("dark");
  } else {
    document.documentElement.classList.remove("dark");
  }
</script>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer components {
    h1 {
      @apply font-bold text-3xl
    }
    h2 {
      @apply font-bold text-xl
    }
    h3 {
      @apply text-sm
    }
  }

  @layer containers {
    body {
      @apply bg-base dark:bg-dark_base text-text dark:text-dark_text font-text
    }
    footer {
      @apply bg-mantle dark:bg-dark_mantle text-text dark:text-dark_text font-text
    }
    .post-prose {
      @apply prose-headings:text-text prose-headings:font-bold prose-h1:text-3xl prose-h2:text-2xl prose-h3:text-xl
    }
  }
</style>