---
import PostCard from "./PostCard.astro";
import type { CollectionEntry } from "astro:content";
import { Separator } from "./ui/separator";

export interface Props {
  posts: CollectionEntry<"posts">[];
}

const { posts } = Astro.props;
---

<ul role="list">
  {
    posts.map((p) => (
      <>
        <PostCard post={p} />
        <Separator />
      </>
    ))
  }
</ul>
