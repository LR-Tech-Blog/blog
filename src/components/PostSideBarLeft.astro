---
import Icon from "astro-icon";
---

<div class="flex flex-col gap-6 items-center">
    <span class="font-bold text-xs">SHARE</span>
    <button id="copyLink" class="transition hover:scale-110 focus:ring-2">
        <Icon name="link" width="30" height="30"/>
    </button>
    <button id="shareTwitter" class="transition hover:scale-110">
        <Icon name="twitter" width="30" height="30"/>
    </button>
    <!-- <button id="shareLinkedin" class="transition hover:scale-110">
        <Icon name="linkedin" width="30" height="30"/>
    </button> -->
</div>

<script>
    import { shareTwitter, shareLinkedin } from "../scripts/share"

    document.getElementById("copyLink")?.addEventListener("click", () => {
        const link = encodeURI(window.location.href)
        navigator.clipboard.writeText(link)
    })
    document.getElementById("shareTwitter")?.addEventListener("click", () => {
        const link = encodeURI(window.location.href)
        shareTwitter(link)
    })
    document.getElementById("shareLinkedin")?.addEventListener("click", () => {
        const link = encodeURI(window.location.href)
        shareLinkedin(link)
    })
</script>